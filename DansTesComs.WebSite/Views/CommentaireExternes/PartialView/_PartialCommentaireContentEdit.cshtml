@model ICollection< CommentairesExterneContent>
@Html.Label(CommentaireExterneRessources.Title  , htmlAttributes: new { @class = "control-label col-md-3" })
<div class="col-md-8" id="ajoutdecoms">
   @{ int i; }
    @for ( i = 0; i < Model.Count; i++)
    {
        var elem = Model.ElementAt(i);

        <div class="row" >
            <div class="col-md-4">
                <input class="form-control" id="CommentairesExterneContents_@(i)__Pseudo" value="@elem.Pseudo" name="CommentairesExterneContents[@i].Pseudo" type="text" placeholder="@CommentaireExterneRessources.Pseudo">
                @{/*todo: ajouter l'indentation*/}
                <input title="@CommentaireExterneRessources.Indentation" 
                       class="form-control petitChampNiveau" id="CommentairesExterneContents_@(i)__Niveau" 
                       name="CommentairesExterneContents[@i].Niveau" value="@elem.Niveau" type="number" disabled="disabled">
                <button type="button" class="btn" onclick="addNiveau(this);">+</button>
                <button type="button" class="btn" onclick="moinsNiveau(this);">-</button>
            </div>
            <div class="col-md-8">
                <textarea class="form-control" id="CommentairesExterneContents_@(i)__Commentaire" name="CommentairesExterneContents[@i].Commentaire" placeholder="@CommentaireExterneRessources.Title">@elem.Commentaire</textarea>
            </div>
        </div>
    }
    <input type="hidden" id="lastIndexCom" value="@i"/>
</div>
<div class="form-group">
    <div class="col-md-offset-3 col-md-8">
        <button class="btn  " type="button" id="addCommentButton">@CommentaireExterneRessources.Ajouter</button>
    </div>
</div>
