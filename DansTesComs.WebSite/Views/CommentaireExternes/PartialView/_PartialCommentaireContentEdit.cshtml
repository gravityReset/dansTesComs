@model ICollection< CommentairesExterneContent>
@Html.Label("Commentaires", htmlAttributes: new { @class = "control-label col-md-2" })
<div class="col-md-10" id="ajoutdecoms">
   @{ int i; }
    @for ( i = 0; i < Model.Count; i++)
    {
        var elem = Model.ElementAt(i);

        <div class="row" >
            <div class="col-md-3">
                <input class="form-control" id="CommentairesExterneContents_@(i)__Pseudo" value="@elem.Pseudo" name="CommentairesExterneContents[@i].Pseudo" type="text" placeholder="@CommentaireExterneRessources.Pseudo">
                <input id="CommentairesExterneContents_@(i)__Niveau" name="CommentairesExterneContents[@i].Niveau" value="@elem.Niveau" type="hidden" >
            </div>
            <div class="col-md-6">
                <textarea class="form-control" id="CommentairesExterneContents_@(i)__Commentaire" name="CommentairesExterneContents[@i].Commentaire" placeholder="@CommentaireExterneRessources.Title">@elem.Commentaire</textarea>
            </div>
        </div>
    }
    <input type="hidden" id="lastIndexCom" value="@i"/>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button class="btn btn-default" type="button" id="addCommentButton">@CommentaireExterneRessources.Ajouter</button>
    </div>
</div>
