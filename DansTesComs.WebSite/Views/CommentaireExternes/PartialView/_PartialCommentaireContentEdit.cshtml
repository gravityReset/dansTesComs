@model ICollection< CommentairesExterneContent>
@Html.Label("Commentaires", htmlAttributes: new { @class = "control-label col-md-2" })
<div class="col-md-10" id="ajoutdecoms">
   @{ int i = 0; }
    @for ( i = 0; i < Model.Count; i++)
    {

        var elem = Model.ElementAt(i);

        <div class="row" >
            <div class="col-md-3">
                <input class="form-control" id="CommentairesExterneContents_@i __Pseudo" value="@elem.Pseudo" name="CommentairesExterneContents[@i].Pseudo" type="text" placeholder="Pseudo">
                <input id="CommentairesExterneContents_@i __Niveau" name="CommentairesExterneContents[@i].Niveau" value="@elem.Niveau" type="hidden" value="0">


            </div>
            <div class="col-md-6">
                <textarea class="form-control" id="CommentairesExterneContents_@i __Commentaire" name="CommentairesExterneContents[@i].Commentaire" placeholder="commentaire">@elem.Commentaire</textarea>
            </div>
        </div>
    }
    <input type="hidden" id="lastIndexCom" value="@i"/>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button class="btn btn-default" type="button" id="addCommentButton">+</button>
    </div>
</div>
