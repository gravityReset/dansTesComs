@model Commentaire
<div id="supercompliquepourmettrenotrecom" class="row">

    @using (Ajax.BeginForm(new AjaxOptions()
    {
        AllowCache = false,
        HttpMethod = "Post",
        Url = "/Commentaires/create",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "supercompliquepourmettrenotrecom",
        OnSuccess = "successAddComm"
    }))
    {
        @Html.HiddenFor(c => c.PostId, new { @value = ViewBag.commentid })
        <div class="form-group">
            @Html.LabelFor(model => model.Texte, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Texte, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Texte, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <input type="submit" value="@GeneralRessources.Publier" class="btn  " />
            </div>
        </div>

    }
</div>
