@using DansTesComs.Core.Helpers
@model Commentaire

<div class="row col-md-10 commentaireDeComExt">
<div class="pull-left @if (IsPost){<text>new-commentaire-ajax </text>}">
        <img  src="@Model.User.GetGravatarLink()" height="40" width="40" alt="user logo" />
    </div>
    <div class="col-md-10">
        <span class="pseudo">@Model.User.Pseudo</span>
        <span class="separation-pseudo-commentaire">:</span>
        <span class="commentaire">@Html.Raw(Model.Texte.TextToTextLink())</span>
        <div class="row">
            <div class="commentaire-poster pull-left">@Html.DisplayFor(model => model.DatePost)</div>
            <div class="commentaire-poster pull-left margin-1" id="NoteCommentaire-@Model.Id">
                @Html.Action("Index", "NotesCommentaire", new { commentaireId = Model.Id })
            </div>
        </div>
    </div>

</div>
