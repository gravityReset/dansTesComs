@if (Request.IsAuthenticated)
{
    <text>
        Bonjour, @Html.ActionLink(User.Identity.Name, "Manage", "Account", null, new {@class = "username", title = "Gérer"})!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a>
        }
    </text>
}
else
{
    <ul>
        <li>@Html.ActionLink("S'inscrire", "Index", "User", null, new {id = "registerLink"})</li>
        <li>@Html.ActionLink("Se connecter", "Index", "User", null, new { id = "loginLink" })</li>
    </ul>
}