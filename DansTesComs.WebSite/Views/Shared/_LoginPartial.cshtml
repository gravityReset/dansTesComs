@if (Request.IsAuthenticated)
{
    <text>
        Bonjour, @Html.ActionLink(User.Identity.Name, "Edit", "User", null, new { @class = "username", title = "Gérer" })!
        @using (Html.BeginForm("Deconnexion", "User", FormMethod.Post, new {id = "logoutForm"}))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a>
        }
    </text>
}
else
{
    <ul>
        <li>@Html.ActionLink("S'inscrire / Se connecter", "Index", "User", null, new { id = "registerLink" })</li>
    </ul>
}